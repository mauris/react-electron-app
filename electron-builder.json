{
  "productName": "electron-react-app",
  "directories": {
    "output": "app-builds"
  },
  "extraMetadata": {
    "main": "electron/index.js"
  },
  "files": [
    "electron/**/*",
    "build/**/*",
    "!LICENSE.md",
    "!package.json",
    "!package-lock.json",
    "!src/",
    "!public/",
    "!app-builds/",
    "!Procfile"
  ],
  "win": {
    "icon": "dist",
    "target": [
      "portable",
      "nsis",
      "msi"
    ]
  },
  "mac": {
    "icon": "dist",
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "icon": "dist",
    "target": [
      "AppImage",
      "deb"
    ]
  }
}
